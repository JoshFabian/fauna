- follower = user_follow.user
- following = user_follow.following

.update-panel.rounded-panel
  .small-12.columns
    .user-image
      = link_to image_tag(user_avatar_image_thumbnail(follower.avatar_image, 80)), user_path(follower)
    .user-info
      %h4.story-title
        = link_to follower.handle, user_path(follower)
        %span
          Followed a new user
      %p.secondary
        %span.ember-view #{time_ago_in_words(user_follow.created_at)} ago
  .comment-content.small-12.columns.clearfix
    .listing-embed
      %ul.small-block-grid-2
        - [following].each do
          %li
            = link_to user_path(following) do
              .follow-panel
                .listing-aside.small-12.columns
                  = image_tag(user_avatar_image_thumbnail(following.avatar_image, 100))
                  %h5{:itemprop => following.handle}= following.handle

