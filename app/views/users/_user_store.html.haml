- if !@store
  .small-12.columns
    .row
      .alert-box.info.radius{"data-alert" => ""}
        You must have at least 10 listings to unlock additional Stores features!
        %a.close{:href => "#"} &times;

- if @store
  .row
    %h5{:style => "float: left; position: relative; top: 0px;"}= @subtitle
    -# .search{:style => "float: right;margin-bottom: 15px;width: auto;"}
    = form_for "", url: user_store_search_path(@user), method: :post, html: {class: "search-form search", style: "float: right;margin-bottom: 15px;width: auto;"} do |f|
      %div{:style => "margin:0;padding:0;display:inline"}
      = f.text_field 'query', name: 'query', value: @query, placeholder: 'Search ...'
      %i.icon.ion-ios7-search-strong

.row
  - if @listings.blank?
    -# no listings
    = render(partial: "users/user_listings_empty")
  - else
    %ul.small-block-grid-4
      - @listings.each do |listing|
        = render(partial: "listings/listing_tile", locals: {listing: listing, user: listing.user})
