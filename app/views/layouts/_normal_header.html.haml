%header.global-head
  .row
    .left-nav
      = link_to listings_path do
        = image_tag "landing-logo.jpg", :class => "header-logo"
    .right-nav
      .search
        = form_for "", url: listing_search_path, html: {class: "search-form"} do |f|
          = f.text_field 'query', name: 'query', value: @query, placeholder: 'Search ...'

      - if !user_signed_in?
        .guest-links
          = link_to "Login", login_path
          or
          = link_to "Register", login_path
      - else
        = link_to current_user.handle, '#', :'data-dropdown' => 'drop1'
        %ul#drop1.f-dropdown{"data-dropdown-content" => ""}
          %li= link_to 'Profile', user_path(current_user.id)
          - if current_user.roles?(:admin)
            %li= link_to 'Waitlists', waitlists_path
          %li= link_to 'Logout', logout_path

%header.global-subhead
  .row
    %ul.inline-list
      - Category.roots.order("position asc").each do |category|
        %li= link_to category.name, listing_category_path(category.name.parameterize)
