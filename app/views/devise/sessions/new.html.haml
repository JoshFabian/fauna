= content_for :title, "Login | Signup"

:css
  body {
    padding-top: 0px !important;
  }
  .global-head {
    display: none;
  }
  .global-subhead {
    display: none;
  }
.landing-page
  .scrolling-background-container
    .scrolling-bg.animate-background
  .row
    .email-block.medium-6.medium-centered.columns
      = image_tag "landing-logo.jpg", :class => "landing-logo"
      .login-form.medium-8.columns.small-centered
        %a.button.facebook-button{href: user_omniauth_authorize_path(:facebook)} 
          %i.icon.ion-social-facebook
          Login with Facebook
        .login-text
          = link_to "Login", '#', class: 'user-password-login-show'
          %span or 
          = link_to "Register with Email", new_password_signup_path
        .login-text
          %span{style: 'font-size: 0.8em;'}= link_to "Forgot my password", new_user_password_path

        = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-validation user-password-login hide"}) do |f|
          = f.email_field :email, :autofocus => true, :required => true, :class => "", :placeholder => 'email'
          = f.password_field :password, :required => true, :class => "", :placeholder => 'password'
          = f.submit "Login", :class => 'button'