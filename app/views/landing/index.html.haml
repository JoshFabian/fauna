.landing-page
  .scrolling-background-container
    .scrolling-bg.animate-background
  .row
    .email-block.small-8.small-centered.columns
      = image_tag "landing-logo.jpg", :class => "landing-logo"
      %h3 The easiest way to buy and sell reptiles online.
      .landing-form.small-11.columns.small-centered
        .row.collapse
          // If user hasn't submitted email
          -# = render :partial => "email_form"

          // After email has submitted email
          -# = render :partial => "user_type"

          // After submitting email
      = render :partial => "invite_friends"
