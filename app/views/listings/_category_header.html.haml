.category-header.small-12.columns{:style => "background-image: url('#{category_cover_image(@category)}')"}
  .overlay
  .category-nav
    .row
      %h1= @category.name
      - if @listings.blank?
      - else
        %hr
        %ul.centered-inline-list
          - @subcategories.each do |child|
            %li= link_to child.name, listing_category_path(@category.name.parameterize, child.name.parameterize)